<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:signature="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:weightSum="1"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar" />



    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        signature:cardCornerRadius="12dp"
        android:layout_margin="14dp"
        android:layout_above="@+id/buttons_container"
        android:id="@+id/signature_pad_container">

        <TextView
            android:layout_width="match_parent"
            android:background="#005389"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text14sp"
            android:text="Place your Signature"
            android:layout_height="34dp"></TextView>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="34dp"
            android:background="@android:color/white"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/signature_pad_description" />



        <ImageView
            android:layout_width="fill_parent"
            android:layout_marginTop="34dp"
            android:layout_height="@dimen/_360sdp"
            android:id="@+id/signature_pad" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvViewSignature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_25sdp"
        android:background="@drawable/rectangle_btn_shape"
        android:gravity="center"
        android:visibility="visible"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Edit Signature"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />



</LinearLayout>
