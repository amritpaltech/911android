<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_150sdp"
       app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_black"
                android:id="@+id/closeBtn"
              android:layout_alignParentRight="true"
                app:tint="@color/white"
                android:padding="2dp"
                android:src="@drawable/ic_close_black_24"
                android:layout_height="@dimen/_20sdp"></ImageView>

            <TextView
                android:id="@+id/tv_Take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Take Photo"
                android:layout_below="@+id/closeBtn"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_Gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:text="Gallery"
                android:layout_below="@+id/tv_Take_photo"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_Documents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:text="Document"
                android:gravity="start"
                android:layout_below="@+id/tv_Gallery"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
