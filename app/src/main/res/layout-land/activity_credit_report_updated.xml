<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.dashboard.Dashboard.DashboardFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_124sdp">
      <ImageView
          android:layout_width="match_parent"
          android:src="@drawable/path_320"
          android:scaleType="fitXY"
          android:layout_height="match_parent"></ImageView>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="@dimen/_14sdp"
          android:orientation="vertical"
          android:layout_marginLeft="@dimen/_24sdp"
          android:layout_height="match_parent">

          <TextView
              android:layout_width="wrap_content"
              android:textSize="@dimen/_20sdp"
              android:text="Your Credit Report"
              android:fontFamily="@font/bold"
              android:textColor="@color/white"
              android:layout_height="wrap_content"></TextView>
          <TextView
              android:layout_width="wrap_content"
              android:textSize="@dimen/_14sdp"
              android:text="September 2021"
              android:fontFamily="@font/regular"
              android:textColor="@color/white"
              android:layout_height="wrap_content"></TextView>
      </LinearLayout>
  </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:visibility="visible"
        android:id="@+id/scroolableContent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:text="Credit Bureaus"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
